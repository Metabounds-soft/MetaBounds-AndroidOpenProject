<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        style="@style/IconBackStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_glass"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_about"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back"
        app:srcCompat="@drawable/ic_about" />

    <com.xr.common.portal.feature.device.view.ProgressSearchView
        android:id="@+id/img_search"
        android:layout_width="130.0dip"
        android:layout_height="130.0dip"
        android:layout_gravity="start|center"
        android:layout_marginTop="48dp"
        android:layerType="hardware"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_search_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:gravity="center"
        android:text="@string/pair_glass_search_title"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_search" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/search_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:gravity="center"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:text="@string/pair_glass_search_tips"
        android:textColor="@color/c979B9B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_device_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="23dip"
        android:layout_marginBottom="20dip"
        android:background="@drawable/bg_rationale_white"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_search_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_tips" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/search_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/glass_search_question"
        android:textColor="@color/main_menu_blue"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_tips" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_search_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/glass_search_again"
        android:textColor="@color/brand_color"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search_again"
        android:layout_width="218dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_btn_highlight"
        android:gravity="center"
        android:text="@string/glass_search_again"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_question" />
</androidx.constraintlayout.widget.ConstraintLayout>