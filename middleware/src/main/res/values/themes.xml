<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Common" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="IconBackStyle">
        <item name="android:layout_width">24dp</item>
        <item name="layout_constraintDimensionRatio">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="srcCompat">@drawable/ic_arrow_back</item>
    </style>

    <style name="DialogStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/cAEB1B1</item>
        <item name="colorControlActivated">@color/c00be85</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>   <!--使得对话框背景色变黑 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">32dip</item>
        <item name="maxWidth">32dip</item>
        <item name="minHeight">32dip</item>
        <item name="maxHeight">32dip</item>
    </style>
</resources>